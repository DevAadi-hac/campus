
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to the entire database for any authenticated user.
    // WARNING: This is a permissive rule for development and should be
    // secured before releasing your app to production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
